<div class="card card--list">
  <div class="card__content">
    <!-- Header with title -->
    <div class="py-4 space-y-2">
      <h3 class="text-lg text-secondary font-semibold">
        <%= task_template.title %>
      </h3>
      
      <!-- Basic metadata without complex routing -->
      <div class="text-sm text-gray-2">
        <span>XP: <%= task_template.xp_reward %></span> • 
        <span>Level <%= task_template.level_required %>+</span> • 
        <span><%= estimated_time %></span>
      </div>
    </div>
    
    <!-- Description -->
    <div class="py-2">
      <p class="text-gray-2 text-sm leading-relaxed">
        <%= truncate(task_template.description, length: 150) %>
      </p>
    </div>
    
    <!-- Action section - this might have been the issue -->
    <div class="pt-4 border-t border-gray-1">
      <% if can_accept? %>
        <%= link_to "Accept Task", accept_task_path, 
                   method: :post, 
                   class: "button button--sm button--secondary w-full",
                   data: { confirm: "Are you sure you want to accept this task?" } %>
      <% else %>
        <div class="text-center py-2 px-4 bg-gray-1 rounded text-sm text-gray-2">
          Level requirement not met
        </div>
      <% end %>
    </div>
  </div>
</div>