<!-- XP Progress using Decidim patterns -->
<div class="mb-4">
  <div class="flex justify-between items-center mb-2">
    <div class="flex items-center">
      <%= icon "award-line", class: "w-5 h-5 mr-2 text-yellow-500" %>
      <span class="font-semibold">
        <%= t(".level", level: current_level, default: "Level #{current_level}") %>
      </span>
    </div>
    <span class="text-sm opacity-75">
      <% if next_level_xp && next_level_xp > 0 %>
        <%= t(".xp_to_next", xp: next_level_xp, default: "#{next_level_xp} XP to next level") %>
      <% else %>
        <%= t(".max_level", default: "Max level reached!") %>
      <% end %>
    </span>
  </div>
  
  <!-- Progress Bar using Decidim progress-bar component -->
  <div class="progress-bar">
    <div class="progress-bar__meter bg-gradient-to-r from-yellow-400 to-orange-500" 
         style="width: <%= progress_percentage %>%"></div>
  </div>
  
  <div class="flex justify-between items-center mt-2 text-xs opacity-75">
    <span>
      <%= icon "star-line", class: "w-3 h-3 mr-1" %>
      <%= t(".total_xp", xp: total_xp, default: "#{total_xp} XP earned") %>
    </span>
    <span><%= progress_percentage.round %>%</span>
  </div>
</div>
