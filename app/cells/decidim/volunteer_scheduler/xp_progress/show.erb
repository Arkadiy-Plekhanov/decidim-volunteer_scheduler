<div class="xp-progress">
  <div class="progress-info">
    <span class="current-level">
      <%= t("decidim.volunteer_scheduler.dashboard.level", level: current_level) %>
    </span>
    <span class="next-level-info">
      <% if next_level_xp %>
        <%= t("decidim.volunteer_scheduler.dashboard.xp_to_next_level", xp: next_level_xp) %>
      <% else %>
        <%= t("decidim.volunteer_scheduler.dashboard.max_level_reached") %>
      <% end %>
    </span>
  </div>
  
  <div class="progress" role="progressbar" tabindex="0" aria-valuenow="<%= progress_percentage %>" aria-valuemin="0" aria-valuemax="100">
    <div class="progress-meter" style="width: <%= progress_percentage %>%">
      <p class="progress-meter-text"><%= progress_percentage %>%</p>
    </div>
  </div>
  
  <div class="xp-info">
    <small>
      <%= t("decidim.volunteer_scheduler.dashboard.total_xp_earned", xp: total_xp) %>
    </small>
  </div>
</div>
