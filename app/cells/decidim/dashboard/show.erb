<div class="dashboard-summary">
  <div class="grid-x grid-margin-x">
    <div class="cell small-12 medium-6">
      <div class="stat-card">
        <h3><%= volunteer_profile.total_xp %></h3>
        <p><%= t("decidim.volunteer_scheduler.dashboard.total_xp") %></p>
      </div>
    </div>
    <div class="cell small-12 medium-6">
      <div class="stat-card">
        <h3><%= t("decidim.volunteer_scheduler.dashboard.level", level: volunteer_profile.level) %></h3>
        <p><%= t("decidim.volunteer_scheduler.dashboard.current_level") %></p>
      </div>
    </div>
  </div>
  
  <%= cell("decidim/volunteer_scheduler/xp_progress", volunteer_profile) %>
</div>
